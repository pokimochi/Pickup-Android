<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profile">

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.usf.pickup.ui.create.CreateFragment"
        android:label="@string/title_create_game"
        tools:layout="@layout/fragment_create" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.usf.pickup.ui.search.SearchFragment"
        android:label=""
        android:theme="@style/AppTheme.NoActionBar"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.usf.pickup.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>