<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#6CC900</item>
    </style>
    <style name="Button.Red" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#E64545</item>
    </style>
    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#FCA416</item>
    </style>
    <style name="Button.Grey" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#D1D1D1</item>
    </style>
</resources>
